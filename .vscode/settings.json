{
    // CI/CD.
    "gitlab.instanceUrl": "https://gitlab.ashvardanian.com/unum/pybot",
    "gitlab.showStatusBarLinks": true,
    // Language-specific.
    // https://code.visualstudio.com/docs/python/settings-reference
    "python.pythonPath": "~/miniconda3/bin/python",
    "python.condaPath": "~/miniconda3/bin/conda",
    // Environment:
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 3,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.minimap.size": "fit",
    "editor.unfoldOnClickAfterEndOfLine": true,
    "explorer.sortOrder": "type",
    "timeline.showView": true,
    // Appearence:
    // https://github.com/tonsky/FiraCode/wiki/VS-Code-Instructions
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "workbench.preferredDarkColorTheme": "Default Light+",
}